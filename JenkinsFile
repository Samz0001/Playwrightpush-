pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Samz0001/Playwrightpush-.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Playwright Docker image..."
                    // Use 'bat' for Windows agent
                    bat "docker build -t playwright-tests ." 
                }
            }
        }

        stage('Run Playwright Tests in Docker') {
            steps {
                script {
                    echo "Running tests inside Playwright Docker container..."
                    // FIX 1: Using "%WORKSPACE%" for Windows bat env variable.
                    // IMPROVEMENT: Added --ipc=host for stability and used 'npm ci'.
                    bat """
                        docker run --rm ^
                        --ipc=host ^
                        -e CI=true ^
                        -v "%WORKSPACE%":/app ^
                        -w /app ^
                        playwright-tests /bin/sh -c "npm ci && npx playwright test"
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Publishing Playwright HTML Report..."
            // Requires HTML Publisher Plugin
            publishHTML(target: [
                reportDir: 'playwright-report',
                reportFiles: 'index.html',
                reportName: 'Playwright HTML Report',
                keepAll: true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])
            
            echo "Publishing Allure Report..."
            // FIX 2: Corrected Allure syntax. Removed invalid 'report', 'source', and 'cleanResults'.
            // Requires Allure Jenkins Plugin
            allure([
                results: [[path: 'allure-results']], // Correct parameter for results directory
                includeProperties: true             // Supported optional parameter
            ])
            
            echo "Archiving Playwright Artifacts (traces, videos, screenshots)..."
            // IMPROVEMENT: Added 'test-results/**' to archive videos and traces correctly.
            archiveArtifacts artifacts: 'playwright-report/**, allure-results/**, test-results/**', fingerprint: true

            echo "Cleaning up workspace..."
            cleanWs()
        }
    }
}