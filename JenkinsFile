pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Samz0001/Playwrightpush-.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Playwright Docker image..."
                    bat "docker build -t playwright-tests ."
                }
            }
        }

        stage('Run Tests in Docker') {
            steps {
                script {
                    echo "Running tests inside Playwright Docker container..."
                    bat "docker run --rm -v %cd%\\playwright-report:/app/playwright-report playwright-tests"
                }
            }
        }

        stage('Example Test 2') {
            steps {
                dir('C:\\Users\\shyam\\OneDrive\\Desktop\\Playwrightpush') {
                    bat 'npx playwright test sample.spec.js --headed'
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
    }
}
