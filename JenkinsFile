pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                echo "üì¶ Checking out code from Git..."
                git branch: 'main', url: 'https://github.com/Samz0001/Playwrightpush-.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Building Playwright Docker image..."
                    bat '''
                        if exist Dockerfile (
                            docker build -t playwright-tests .
                        ) else (
                            echo "‚ùå Dockerfile not found in workspace root!"
                            exit /b 1
                        )
                    '''
                }
            }
        }

        stage('Run Playwright Tests in Docker') {
            steps {
                script {
                    echo "üß™ Running Playwright tests inside Docker container..."
                    bat """
                        docker run --rm ^
                        --ipc=host ^
                        -e CI=true ^
                        -v "%WORKSPACE%":/app ^
                        -w /app ^
                        playwright-tests /bin/bash -c "npm ci && npx playwright test google.spec.js --reporter=html || exit 0"
                    """
                }
            }
        }
    }

    post {
        always {
            echo "üìä Publishing Playwright HTML report..."
            publishHTML(target: [
                allowMissing: true,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'playwright-report',
                reportFiles: 'index.html',
                reportName: 'Playwright Test Report'
            ])

            echo "üßπ Cleaning up workspace but keeping archived report..."
            script {
                try {
                    cleanWs(
                        notFailBuild: true,
                        deleteDirs: true,
                        patterns: [[pattern: 'playwright-report/**', type: 'EXCLUDE']]
                    )
                } catch (Exception e) {
                    echo "‚ö†Ô∏è Warning: workspace cleanup failed, ignoring..."
                }
            }
        }
    }
}
